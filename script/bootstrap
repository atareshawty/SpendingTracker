#!/bin/sh

# script/bootstrap: Resolve all dependencies that the application requires to
#                   run.

set -e

cd "$(dirname "$0")/.."

if [ -f "Brewfile" ] && [ "$(uname -s)" = "Darwin" ]; then
  brew bundle check 2>&1 >/dev/null || {
    echo "==> Installing Homebrew dependenciesâ€¦"
    brew bundle
  }
fi

npm install
